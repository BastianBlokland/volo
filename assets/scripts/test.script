var me = self()
var now = time()

$nextSpawnTime ??= now + 5.0
if($nextSpawnTime <= now) {
  $nextSpawnTime = null

  var spawnPos = nav_query(position(me), "UnblockedCell")
  var spawnRot = rotation(me)
  var spawnScale = 1.0

  destroy($instance)
  $instance = spawn("ExplosionMedium", spawnPos, spawnRot, spawnScale, faction(me))
}
