/**
 * Generic mesh import rules applicable to all meshes.
 */

// Configure default animation settings.
var animCount = anim_count()
for (var animIdx = 0; animIdx != animCount; animIdx += 1) {
  var isLowestLayer = animIdx == animCount - 1

  anim_flag(animIdx, "Loop", true)
  anim_weight(animIdx, isLowestLayer ? 1.0 : 0.0)
}
