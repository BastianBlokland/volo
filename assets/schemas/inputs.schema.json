{
  "title": "AssetInputMapDef",
  "$ref": "#/$defs/AssetInputMapDef",
  "$defs": {
    "AssetInputMapDef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "layer": { "title": "String", "type": "string", "minLength": 1 },
        "actions": {
          "type": "array",
          "items": { "title": "AssetInputActionDef", "$ref": "#/$defs/AssetInputActionDef" }
        }
      },
      "required": [
        "actions"
      ],
      "defaultSnippets": [
        { "label": "New", "body": "^{\n  \"actions\": []\n}" }
      ]
    },
    "AssetInputActionDef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "title": "String", "type": "string", "minLength": 1 },
        "blockers": {
          "type": "array",
          "items": { "title": "AssetInputBlocker", "$ref": "#/$defs/AssetInputBlocker" }
        },
        "bindings": {
          "type": "array",
          "minItems": 1,
          "items": { "title": "AssetInputBindingDef", "$ref": "#/$defs/AssetInputBindingDef" }
        }
      },
      "required": [
        "name",
        "bindings"
      ],
      "defaultSnippets": [
        { "label": "New", "body": "^{\n  \"name\": \"placeholder\",\n  \"bindings\": [\n    {\n      \"type\": \"Pressed\",\n      \"key\": \"MouseLeft\"\n    }\n  ]\n}" }
      ]
    },
    "AssetInputBlocker": {
      "enum": [
        "TextInput",
        "HoveringUi",
        "HoveringGizmo",
        "PrefabCreateMode",
        "CursorLocked"
      ]
    },
    "AssetInputBindingDef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "title": "AssetInputType", "$ref": "#/$defs/AssetInputType" },
        "key": { "title": "AssetInputKey", "$ref": "#/$defs/AssetInputKey" },
        "requiredModifiers": {
          "type": "array",
          "items": { "title": "AssetInputModifier", "$ref": "#/$defs/AssetInputModifier" }
        },
        "illegalModifiers": {
          "type": "array",
          "items": { "title": "AssetInputModifier", "$ref": "#/$defs/AssetInputModifier" }
        }
      },
      "required": [
        "type",
        "key"
      ],
      "defaultSnippets": [
        { "label": "New", "body": "^{\n  \"type\": \"Pressed\",\n  \"key\": \"MouseLeft\"\n}" }
      ]
    },
    "AssetInputType": {
      "enum": [
        "Pressed",
        "Released",
        "Down"
      ]
    },
    "AssetInputKey": {
      "enum": [
        "MouseLeft",
        "MouseRight",
        "MouseMiddle",
        "MouseExtra1",
        "MouseExtra2",
        "MouseExtra3",
        "Shift",
        "Control",
        "Alt",
        "Backspace",
        "Delete",
        "Tab",
        "Tilde",
        "Return",
        "Escape",
        "Space",
        "Plus",
        "Minus",
        "Home",
        "End",
        "PageUp",
        "PageDown",
        "ArrowUp",
        "ArrowDown",
        "ArrowRight",
        "ArrowLeft",
        "BracketLeft",
        "BracketRight",
        "A",
        "B",
        "C",
        "D",
        "E",
        "F",
        "G",
        "H",
        "I",
        "J",
        "K",
        "L",
