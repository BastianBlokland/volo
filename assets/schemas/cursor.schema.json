{
  "title": "CursorDef",
  "$ref": "#/$defs/CursorDef",
  "$defs": {
    "CursorDef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "texture": { "title": "String", "type": "string", "minLength": 1 },
        "hotspotX": { "title": "u32", "type": "integer", "minimum": 0, "maximum": 4294967295 },
        "hotspotY": { "title": "u32", "type": "integer", "minimum": 0, "maximum": 4294967295 },
        "scale": { "title": "f32", "type": "number" },
        "color": {
          "anyOf": [
            { "title": "AssetColor", "description": "HDR Color definition (components default to 0)", "$ref": "#/$defs/AssetColor" },
            { "const": null, "title": "AssetColor" }
          ]
        }
      },
      "required": [ "texture", "hotspotX", "hotspotY" ],
      "defaultSnippets": [
        { "label": "New", "body": "^{\n  \"texture\": \"placeholder\",\n  \"hotspotX\": 0,\n  \"hotspotY\": 0\n}" }
      ]
    },
    "AssetColor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "r": { "title": "f32", "type": "number" },
        "g": { "title": "f32", "type": "number" },
        "b": { "title": "f32", "type": "number" },
        "a": { "title": "f32", "type": "number" }
      },
      "required": [ "r", "g", "b", "a" ],
      "defaultSnippets": [
        { "label": "New", "body": "^{\n  \"r\": 0,\n  \"g\": 0,\n  \"b\": 0,\n  \"a\": 0\n}" }
      ]
    }
  }
}