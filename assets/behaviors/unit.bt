{
  "$type": "AssetBehavior_Selector",
  "$name": "Root",
  "children": [
    {
      "$type": "AssetBehavior_Sequence",
      "$name": "Move to user input",
      "children": [
        {
          "$type": "AssetBehavior_KnowledgeCheck",
          "$name": "Wait for user input",
          "keys": [
            "user-move-target"
          ]
        },
        {
          "$type": "AssetBehavior_KnowledgeSet",
          "key": "cmd-nav-target",
          "value": {
            "$type": "AssetKnowledgeSource_Knowledge",
            "key": "user-move-target"
          }
        },
        {
          "$type": "AssetBehavior_Try",
          "$name": "Check if we arrived at the user input",
          "child": {
            "$type": "AssetBehavior_KnowledgeCompare",
            "comparison": 0,
            "key": "self-nav-arrived",
            "value": {
              "$type": "AssetKnowledgeSource_Knowledge",
              "key": "user-move-target"
            }
          }
        },
        {
          "$type": "AssetBehavior_KnowledgeClear",
          "keys": [
            "user-move-target"
          ]
        }
      ]
    },
    {
      "$type": "AssetBehavior_Sequence",
      "$name": "Attack target",
      "children": [
        {
          "$type": "AssetBehavior_KnowledgeCheck",
          "$name": "Find target",
          "keys": [
            "target-entity"
          ]
        },
        {
          "$type": "AssetBehavior_Selector",
          "$name": "Move into range",
          "children": [
            {
              "$type": "AssetBehavior_Sequence",
              "children": [
                {
                  "$type": "AssetBehavior_Selector",
                  "$name": "Check if in range",
                  "children": [
                    {
                      "$type": "AssetBehavior_KnowledgeCompare",
                      "$name": "In-range cooldown",
                      "comparison": 4,
                      "key": "self-inrange-time",
                      "value": {
                        "$type": "AssetKnowledgeSource_Time",
                        "secondsFromNow": 0
                      }
                    },
                    {
                      "$type": "AssetBehavior_Sequence",
                      "children": [
                        {
                          "$type": "AssetBehavior_KnowledgeCompare",
                          "$name": "Test if in range",
                          "comparison": 2,
                          "key": "target-dist",
                          "value": {
                            "$type": "AssetKnowledgeSource_Number",
                            "value": 35
                          }
                        },
                        {
                          "$type": "AssetBehavior_KnowledgeSet",
                          "$name": "Set in-range cooldown",
                          "key": "self-inrange-time",
                          "value": {
                            "$type": "AssetKnowledgeSource_Time",
                            "secondsFromNow": 0.5
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "$type": "AssetBehavior_KnowledgeCompare",
                  "$name": "Test Line-of-Sight",
                  "comparison": 0,
                  "key": "target-los",
                  "value": {
                    "$type": "AssetKnowledgeSource_Bool",
                    "value": true
                  }
                }
              ]
            },
            {
              "$type": "AssetBehavior_Repeat",
              "$name": "Move",
              "child": {
                "$type": "AssetBehavior_KnowledgeSet",
                "key": "cmd-nav-target",
                "value": {
                  "$type": "AssetKnowledgeSource_Knowledge",
                  "key": "target-position"
                }
              }
            }
          ]
        },
        {
          "$type": "AssetBehavior_KnowledgeSet",
          "$name": "Stop moving",
          "key": "cmd-nav-stop",
          "value": {
            "$type": "AssetKnowledgeSource_Bool",
            "value": true
          }
        },
        {
          "$type": "AssetBehavior_KnowledgeSet",
          "$name": "Attack",
          "key": "cmd-attack-target",
          "value": {
            "$type": "AssetKnowledgeSource_Knowledge",
            "key": "target-entity"
          }
        }
      ]
    },
    {
      "$type": "AssetBehavior_Success",
      "$name": "Idle"
    }
  ]
}
