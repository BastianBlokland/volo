{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.autoGuessEncoding": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.rulers": [
    100
  ],
  "files.associations": {
    "*.h": "c",
    "*.c": "c",
    "*.atlas": "json",
    "*.arraytex": "json",
    "*.decal": "json",
    "*.fonttex": "json",
    "*.graphic": "json",
    "*.inputs": "json",
    "*.level": "json",
    "*.prefabs": "json",
    "*.procmesh": "json",
    "*.prefs": "json",
    "*.products": "json",
    "*.proctex": "json",
    "*.vfx": "json",
    "*.weapons": "json"
  },
  "files.exclude": {
    ".cache": true,
    "assets/**/*.spv": true
  },
  "json.schemas": [
    { "fileMatch": [ "*.atlas" ], "url": "./assets/schemas/atlas.schema.json" },
    { "fileMatch": [ "*.arraytex" ], "url": "./assets/schemas/arraytex.schema.json" },
    { "fileMatch": [ "*.decal" ], "url": "./assets/schemas/decal.schema.json" },
    { "fileMatch": [ "*.fonttex" ], "url": "./assets/schemas/fonttex.schema.json" },
    { "fileMatch": [ "*.graphic" ], "url": "./assets/schemas/graphic.schema.json" },
    { "fileMatch": [ "*.inputs" ], "url": "./assets/schemas/inputs.schema.json" },
    { "fileMatch": [ "*.level" ], "url": "./assets/schemas/level.schema.json" },
    { "fileMatch": [ "*.prefabs" ], "url": "./assets/schemas/prefabs.schema.json" },
    { "fileMatch": [ "*.procmesh" ], "url": "./assets/schemas/procmesh.schema.json" },
    { "fileMatch": [ "*.producs" ], "url": "./assets/schemas/products.schema.json" },
    { "fileMatch": [ "*.proctex" ], "url": "./assets/schemas/proctex.schema.json" },
    { "fileMatch": [ "*.vfx" ], "url": "./assets/schemas/vfx.schema.json" },
    { "fileMatch": [ "*.weapons" ], "url": "./assets/schemas/weapons.schema.json" }
  ],
  "json.format.keepLines": true,
  "volo-lsp.trace.server": "off",
  "glsllint.glslangValidatorArgs": "-Iassets/shaders/include -V",
  "glsllint.linkShader": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(?:vert|frag|glsl)$",
        "cmd": "cmake --build build --target volo_shaders"
      }
    ]
  }
}
