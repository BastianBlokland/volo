{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.autoGuessEncoding": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.rulers": [
    100
  ],
  "files.associations": {
    "*.h": "c",
    "*.c": "c",
    "*.atl": "json",
    "*.atx": "json",
    "*.bt": "json",
    "*.btschema": "json",
    "*.dcl": "json",
    "*.ftx": "json",
    "*.gra": "json",
    "*.imp": "json",
    "*.lvl": "json",
    "*.pfb": "json",
    "*.pme": "json",
    "*.prefs": "json",
    "*.ptx": "json",
    "*.vfx": "json",
    "*.wea": "json",
  },
  "files.exclude": {
    ".cache": true,
    "assets/**/*.spv": true
  },
  "json.schemas": [
    { "fileMatch": [ "*.atl" ], "url": "./assets/schemas/atl.schema.json" },
    { "fileMatch": [ "*.atx" ], "url": "./assets/schemas/atx.schema.json" },
    { "fileMatch": [ "*.bt" ], "url": "./assets/schemas/bt.schema.json" },
    { "fileMatch": [ "*.dcl" ], "url": "./assets/schemas/dcl.schema.json" },
    { "fileMatch": [ "*.ftx" ], "url": "./assets/schemas/ftx.schema.json" },
    { "fileMatch": [ "*.gra" ], "url": "./assets/schemas/gra.schema.json" },
    { "fileMatch": [ "*.imp" ], "url": "./assets/schemas/imp.schema.json" },
    { "fileMatch": [ "*.lvl" ], "url": "./assets/schemas/lvl.schema.json" },
    { "fileMatch": [ "*.pfb" ], "url": "./assets/schemas/pfb.schema.json" },
    { "fileMatch": [ "*.pme" ], "url": "./assets/schemas/pme.schema.json" },
    { "fileMatch": [ "*.ptx" ], "url": "./assets/schemas/ptx.schema.json" },
    { "fileMatch": [ "*.vfx" ], "url": "./assets/schemas/vfx.schema.json" },
    { "fileMatch": [ "*.wea" ], "url": "./assets/schemas/wea.schema.json" }
  ],
  "json.format.keepLines": true,
  "glsllint.glslangValidatorArgs": "-Iassets/shaders/include -V",
  "glsllint.linkShader": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(?:vert|frag|glsl)$",
        "cmd": "cmake --build build --target volo_shaders"
      }
    ]
  }
}
